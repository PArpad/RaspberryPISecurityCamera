<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RaspberryPISecurityCam</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-social/bootstrap-social.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrapTheme.css" />

</head>
<body style="padding-top:0px">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="~/lib/file-saver/FileSaver.js"></script>
    <script src="~/lib/polyClip-master/js/polyclip-p.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
        <a class="navbar-brand" href="/Home/Live">Live</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Alarms">Alarms</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Settings">Settings</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Logs">Logs</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/History">History</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/About">About</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Contact">Contact</a>
                </li>
                @if (User.IsInRole("SecCamUserAdministrators"))
                    {
                         <li class="nav-item active">
                             <a class="nav-link" href="/SecAppUsers/Index">Manage Users</a>
                         </li>
                         <li class="nav-item active">
                             <a class="nav-link" href="/Home/AdminSettings">Admin Settings</a>
                         </li>
                    }
            </ul>
            @await Html.PartialAsync("_LoginPartial")
            @*<form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>*@
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - RaspberryPISecurityCam</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>

